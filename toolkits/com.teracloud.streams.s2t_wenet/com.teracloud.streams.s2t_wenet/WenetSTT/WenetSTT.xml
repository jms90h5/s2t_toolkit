<?xml version="1.0" encoding="UTF-8"?>
<operatorModel xmlns="http://www.ibm.com/xmlns/prod/streams/spl/operator" 
               xmlns:cmn="http://www.ibm.com/xmlns/prod/streams/spl/common">
  <cppOperatorModel>
    <context>
      <description>
        The WenetSTT operator provides real-time speech-to-text transcription using the WeNet toolkit.
        It processes streaming audio data and outputs transcription results with support for partial
        (incremental) results and final transcriptions.
      </description>
      <libraryDependencies>
        <library>
          <cmn:description>WeNet C++ Library</cmn:description>
          <cmn:managedLibrary>
            <cmn:lib>wenetcpp</cmn:lib>
            <cmn:includePath>../../../impl/include</cmn:includePath>
          </cmn:managedLibrary>
        </library>
      </libraryDependencies>
      <providesSingleThreadedContext>Always</providesSingleThreadedContext>
    </context>
    <parameters>
      <allowAny>false</allowAny>
      <parameter>
        <name>modelPath</name>
        <description>Path to the WeNet model directory</description>
        <optional>false</optional>
        <rewriteAllowed>false</rewriteAllowed>
        <expressionMode>AttributeFree</expressionMode>
        <type>rstring</type>
      </parameter>
      <parameter>
        <name>sampleRate</name>
        <description>Sample rate of input audio (default 16000)</description>
        <optional>true</optional>
        <rewriteAllowed>false</rewriteAllowed>
        <expressionMode>AttributeFree</expressionMode>
        <type>int32</type>
      </parameter>
      <parameter>
        <name>enablePartialResults</name>
        <description>Enable partial transcription results</description>
        <optional>true</optional>
        <rewriteAllowed>false</rewriteAllowed>
        <expressionMode>AttributeFree</expressionMode>
        <type>boolean</type>
      </parameter>
      <parameter>
        <name>enableEndpoint</name>
        <description>Enable endpoint detection</description>
        <optional>true</optional>
        <rewriteAllowed>false</rewriteAllowed>
        <expressionMode>AttributeFree</expressionMode>
        <type>boolean</type>
      </parameter>
      <parameter>
        <name>maxChunkWaitTime</name>
        <description>Maximum wait time for audio chunks in seconds</description>
        <optional>true</optional>
        <rewriteAllowed>false</rewriteAllowed>
        <expressionMode>AttributeFree</expressionMode>
        <type>float64</type>
      </parameter>
      <parameter>
        <name>silenceThreshold</name>
        <description>Silence detection threshold</description>
        <optional>true</optional>
        <rewriteAllowed>false</rewriteAllowed>
        <expressionMode>AttributeFree</expressionMode>
        <type>float64</type>
      </parameter>
      <parameter>
        <name>enableVAD</name>
        <description>Enable voice activity detection</description>
        <optional>true</optional>
        <rewriteAllowed>false</rewriteAllowed>
        <expressionMode>AttributeFree</expressionMode>
        <type>boolean</type>
      </parameter>
      <parameter>
        <name>chunkMs</name>
        <description>Chunk size in milliseconds</description>
        <optional>true</optional>
        <rewriteAllowed>false</rewriteAllowed>
        <expressionMode>AttributeFree</expressionMode>
        <type>int32</type>
      </parameter>
    </parameters>
    <inputPorts>
      <inputPortSet>
        <description>Audio input stream</description>
        <tupleMutationAllowed>false</tupleMutationAllowed>
        <windowingMode>NonWindowed</windowingMode>
        <windowPunctuationInputMode>Oblivious</windowPunctuationInputMode>
        <cardinality>1</cardinality>
        <optional>false</optional>
      </inputPortSet>
    </inputPorts>
    <outputPorts>
      <outputPortSet>
        <description>Transcription output stream</description>
        <expressionMode>Expression</expressionMode>
        <autoAssignment>false</autoAssignment>
        <completeAssignment>false</completeAssignment>
        <rewriteAllowed>false</rewriteAllowed>
        <windowPunctuationOutputMode>Generating</windowPunctuationOutputMode>
        <tupleMutationAllowed>true</tupleMutationAllowed>
        <cardinality>1</cardinality>
        <optional>false</optional>
      </outputPortSet>
    </outputPorts>
  </cppOperatorModel>
</operatorModel>